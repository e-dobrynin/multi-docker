{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "jd2050/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "jd2050/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "jd2050/multi-worker",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "jd2050/multi-nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 3050
        }
      ],
      "links": ["server", "client"]
    }
  ]
}
